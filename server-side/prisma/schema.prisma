generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id String @id @default(cuid())

  email    String   @unique
  name     String   @default(cuid())
  password String?
  role     UserRole @default(USER)

  playlists Playlist[]

  favoriteTracks Track[] @relation("UserFavoriteTracks")
  favoriteAlbums Album[] @relation("UserFavoriteAlbums")

  avatar String @default("/uploads/no-user-image.png")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Artist {
  id String @id @default(cuid())

  email    String   @unique
  name     String   @unique
  password String
  avatar   String   @default("/uploads/no-artist-image.png")
  listener Int      @default(0)
  role     UserRole @default(ARTIST)

  albums Album[]
  tracks Track[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("artists")
}

model Playlist {
  id String @id @default(cuid())

  name     String
  imageSrc String @default("/uploads/no-playlist-image.png")

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  tracks Track[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@map("playlists")
}

model Track {
  id String @id @default(cuid())

  name       String
  duration   Int
  audioSrc   String
  imageSrc   String  @default("/uploads/no-track-image.png")
  listener   Int     @default(0)
  isExplicit Boolean @default(false)

  favoritedBy User[] @relation("UserFavoriteTracks")

  artist   Artist @relation(fields: [artistId], references: [id])
  artistId String

  album   Album?  @relation(fields: [albumId], references: [id])
  albumId String? @map("album_id")

  playlists Playlist[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([artistId])
  @@index([albumId])
  @@map("tracks")
}

model Album {
  id String @id @default(cuid())

  name       String
  imageSrc   String  @default("/uploads/no-album-image.png")
  isExplicit Boolean @default(false)
  listener   Int     @default(0)

  artist   Artist @relation(fields: [artistId], references: [id])
  artistId String @map("artist_id")

  favoritedBy User[]  @relation("UserFavoriteAlbums")
  tracks      Track[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([artistId])
  @@map("albums")
}

enum UserRole {
  ARTIST
  USER
  ADMIN
}
