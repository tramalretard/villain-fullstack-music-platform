generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id String @id @default(cuid())

  email    String   @unique
  name     String   @default(cuid())
  password String?
  role     UserRole @default(USER)

  playlists Playlist[]

  artistProfile ArtistProfile?

  favoriteAlbums Album[] @relation("UserFavoriteAlbums")

  avatar String @default("/uploads/no-user-image.png")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model ArtistProfile {
  id String @id @default(cuid())

  listener    Int     @default(0)
  displayName String
  bio         String?
  imageSrc    String  @default("/uploads/no-artist-image.png")

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique @map("user_id")

  albums Album[]
  tracks Track[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("artist_profiles")
}

model Playlist {
  id String @id @default(cuid())

  name     String
  imageSrc String @default("/uploads/no-playlist-image.png")

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  tracks TracksOnPlaylists[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@map("playlists")
}

model TracksOnPlaylists {
  playlist   Playlist @relation(fields: [playlistId], references: [id])
  playlistId String   @map("playlist_id")

  track   Track  @relation(fields: [trackId], references: [id])
  trackId String @map("track_id")

  addedAt DateTime @default(now()) @map("added_at")

  @@id([playlistId, trackId])
  @@map("tracks_on_playlists")
}

model Track {
  id String @id @default(cuid())

  name       String
  duration   Int
  audioSrc   String
  imageSrc   String  @default("/uploads/no-track-image.png")
  listener   Int     @default(0)
  isExplicit Boolean @default(false)

  artist   ArtistProfile @relation(fields: [artistId], references: [id])
  artistId String

  album   Album?  @relation(fields: [albumId], references: [id])
  albumId String? @map("album_id")

  playlists TracksOnPlaylists[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([artistId, name], map: "artist_track_name_unique")
  @@index([artistId])
  @@index([albumId])
  @@map("tracks")
}

model Album {
  id String @id @default(cuid())

  name       String
  imageSrc   String  @default("/uploads/no-album-image.png")
  isExplicit Boolean @default(false)
  listener   Int     @default(0)

  artist   ArtistProfile @relation(fields: [artistId], references: [id])
  artistId String        @map("artist_id")

  favoritedBy User[]  @relation("UserFavoriteAlbums")
  tracks      Track[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([artistId])
  @@map("albums")
}

enum UserRole {
  ARTIST
  USER
  ADMIN
}
